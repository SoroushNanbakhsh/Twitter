      <TextField fx:id="newImagePath" layoutX="200.0" layoutY="86.0" prefHeight="26.0" prefWidth="200.0" promptText="New Image Path" />
      <Button fx:id="changeButton" layoutX="253.0" layoutY="351.0" mnemonicParsing="false" onAction="#changeAvatar" prefHeight="26.0" prefWidth="94.0" text="Change" />
      <Text fx:id="pathError" fill="#d70606" layoutX="200.0" layoutY="125.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Invalid Path" visible="false" wrappingWidth="200.0" />
   </children>
</AnchorPane>
